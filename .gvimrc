" colorscheme gruvbox-hard

" set background=dark
colorscheme gruvbox

" set guifont=Terminus\ 12
" set guifont=Ubuntu\ Mono\ Nerd\ Font\ 11
" set guifont=Ubuntu\ Mono\ Nerd\ Font\ 11
set guifont=GohuFont\ Nerd\ Font\ 12

" Toolbar
set guioptions -=T

" menubar
set guioptions -=m

" right and left scrollbar
set guioptions -=r
set guioptions -=L

" disable mouse !
set mouse=

" make quit easier
nnoremap <C-Q> :q! <Cr>
