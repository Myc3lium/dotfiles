#!/bin/bash

source $HOME/.config/i3/dmenuColors

options="run\n\
usb devices\n\
network options\n\
restart i3\n\
logout\n\
shutdown\n\
bleachbit+shutdown"

option="$(echo -e $options | dmenu -fn $font -i -nb $nbg -nf $nfg -sf $sfg -sb $sbg)" # the chosen option

case "$option" in
	"run") 					$HOME/.config/i3/dmenuCmd ;;
	"usb devices") 			$HOME/.config/i3/usbMount ;;
	"network options") 		$HOME/.config/i3/dmenuNetwork ;;
	"restart i3") 			pkill urxvt; i3-msg "restart" ;;
	"logout") 				i3-msg exit ;;
	"shutdown") 			shutdown now ;;
	"bleachbit+shutdown") 	bleachbit --preset -c && shutdown now ;;
esac
