#!/bin/bash

source $HOME/.cache/wal/colors.sh

options="  lock machine\n\
  run\n\
  usb devices\n\
  network options\n\
 菱 restart i3\n\
 﫼 logout\n
  shutdown\n\
  bleachbit+shutdown"

option="$(echo -e $options | dmenu -fn 'GohuFont Nerd Font-10.8' -i -nb $background -nf $foreground -sf $foreground -sb '#8f3f71')" # the chosen option

## Glob for actual option w/out icon ? yep, works.
case "$option" in
	*lock\ machine) 		bash $HOME/.config/i3/lock.sh 		  ;;
	*run) 					bash $HOME/.config/i3/dmenuCmd 		  ;;
	*usb\ devices) 			$HOME/.config/i3/usbMount 			  ;;
	*network\ options) 		bash $HOME/.config/i3/dmenuNetwork    ;;
	*restart\ i3) 			pkill urxvt; i3-msg "restart" 		  ;;
	*logout) 				i3-msg exit 						  ;;
	*shutdown) 				shutdown now 						  ;;
	*bleachbit+shutdown) 	bleachbit --preset -c && shutdown now ;;
esac



