bindsym $mod+y move position center

# Pulse Audio controls

# Increase / Decrease / Mute sound volume
bindsym XF86AudioRaiseVolume exec --no-startup-id "pactl set-sink-volume 0 +10% && pkill -RTMIN+5 i3blocks"
bindsym XF86AudioLowerVolume exec --no-startup-id "pactl set-sink-volume 0 -10% && pkill -RTMIN+5 i3blocks"
bindsym XF86AudioMute 		 exec --no-startup-id "pactl set-sink-mute 0 toggle && pkill -RTMIN+5 i3blocks"

# CMUS remote control
bindsym XF86AudioPlay exec --no-startup-id "cmus-remote --pause && pkill -RTMIN+10 i3blocks" 
bindsym XF86AudioNext exec --no-startup-id "cmus-remote --next  && pkill -RTMIN+10 i3blocks" 
bindsym XF86AudioPrev exec --no-startup-id "cmus-remote --prev  && pkill -RTMIN+10 i3blocks" 

# Make screenshots
bindsym Print exec --no-startup-id scrot            # Normal
bindsym Shift+Print exec --no-startup-id scrot -d 3 # Delay

# Toggle touchpad on/off
bindsym XF86TouchpadToggle exec --no-startup-id bash /home/myc3lium/.bin/toggle_pad

exec_always --no-startup-id xmodmap -e "keysym Caps_Lock = Escape"
exec_always --no-startup-id xmodmap -e "clear lock"

# compton with shadows.
exec_always --no-startup-id "/home/myc3lium/.bin/compton-start"

# Start cmus-notify
exec_always --no-startup-id "/home/myc3lium/.bin/cmus-notify"

exec_always --no-startup-id redshift -O 4450k
exec_always /home/myc3lium/.fehbg
