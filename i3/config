# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +10% # increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -10% # decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle        # mute sound

# Make screenshots
bindsym Print exec --no-startup-id scrot            # Normal
bindsym Shift+Print exec --no-startup-id scrot -d 3 # Delay

# Toggle touchpad on/off
bindsym XF86TouchpadToggle exec --no-startup-id /home/myc3lium/.bin/toggle_pad
bindsym $mod+g exec --no-startup-id /home/myc3lium/.bin/toggle_pad

exec_always --no-startup-id xmodmap -e "keysym Caps_Lock = Escape"
exec_always --no-startup-id xmodmap -e "clear lock"

# Compton options
# -C				 no shadows on docks
# -c				 shadows on windows
# -D				 fade timing
# -r				 shadow radius
# -o				 shadow opacity
# -f				 apply fade effects on window change
# -b				 daemonise
# --blur-background  blur background of transparent windows

# compton without shadows
# exec_always --no-startup-id compton -z -f -b -D 2

# compton *with* shadows
exec_always --no-startup-id compton -z -C -c -f -D 2 -r 3 -o 0.3 -l 5 -t 5

exec_always --no-startup-id redshift -O 4450k
