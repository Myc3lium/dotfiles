# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks -c /home/myc3lium/.config/i3/i3blocks.conf
        position top
        tray_output none
		strip_workspace_numbers yes
        
		font pango:GohuFont Nerd Font 10.5
        
        colors { 
				statusline $ur_foreground
                background $ur_background
                separator  $ur_foreground

                focused_workspace  $ur_active     $ur_active     $ur_foreground
                inactive_workspace $ur_inactive   $ur_pale       $ur_foreground
                urgent_workspace   $ur_foreground $ur_background $ur_foreground
                                   #    border      background     text
        }
}

# Most of my custom config

# Add cmus and ranger instances on workspace =
for_window	   [instance="music-mpv"]  move workspace	$workspace_hyph
for_window	   [instance="music-cmus"] move workspace 	$workspace_hyph
exec_always --no-startup-id urxvt -name "music-cmus"  -uc -e cmus
exec_always --no-startup-id urxvt -name "music-mpv"   -uc -e ranger ~/Videos/yt/greentexts

# Adds a process monitor in the lower left hand corner of the screen scratchpad
for_window	   [instance="monitor"] floating 	  enable
for_window	   [instance="monitor"] sticky 	  	  toggle 
for_window	   [instance="monitor"] move 		  position 10 px 622 px #610 px 642 px
for_window	   [instance="monitor"] move 		  scratchpad
bindsym $mod+m [instance="monitor"] scratchpad    show 
exec_always --no-startup-id urxvt -geometry 79x6 -name monitor -uc -e htop

# Add a calcurse window to the scratchpad
for_window	   [instance="calendar"] floating    enable
for_window	   [instance="calendar"] move 	     scratchpad
bindsym $mod+o [instance="calendar"] scratchpad  show 
exec_always --no-startup-id urxvt -name calendar  -geometry 100x22 -uc -e calcurse 

# Adds a sticky window to the scratchpad, which can be called with $mod+i
for_window		    [instance="scratch"] floating 	  enable
for_window		    [instance="scratch"] sticky 	  toggle 
for_window	   		[instance="scratch"] move 		  position 630 px 12 px
for_window		    [instance="scratch"] move 		  scratchpad
bindsym $mod+i		[instance="scratch"] scratchpad   show 
exec_always --no-startup-id urxvt -geometry 77x25 -name scratch -uc -e bash 

exec_always --no-startup-id urxvt -uc -name workspace10-terminal -e bash 
for_window [instance="workspace10-terminal"] move workspace $workspace10

# Non-startup Window Rules
assign [class="Firefox"] 	 $workspace9
assign [class="Tor Browser"] $workspace8
assign [class="VirtualBox"]  $workspace7

for_window [class="feh"] 		 	  floating enable
for_window [class="Tor Browser"] 	  floating enable
for_window [class="Florence"] 	 	  floating enable
for_window [class="^.*"] 		 	  border   pixel  1
for_window [instance="networkConfig"] floating enable

bindsym $mod+Control+l 	exec bash /home/myc3lium/.config/i3/lock.sh
bindsym $mod+Shift+i 	exec bash /home/myc3lium/.config/i3/menuScript

bindsym $mod+q kill
bindsym $mod+b exec bash /home/myc3lium/.config/i3/dmenu
bindsym $mod+u exec /home/myc3lium/.bin/urxvt-connect -geometry 64x16 -sl 0 -uc -name urxvt -e bash
bindsym $mod+y move position center

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +10% # Increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -10% # Decrease sound volume
bindsym XF86AudioMute 		 exec --no-startup-id pactl set-sink-mute 0 toggle # Mute sound

# CMUS remote control
bindsym XF86AudioPlay exec --no-startup-id cmus-remote --pause # Pause cmus
bindsym XF86AudioNext exec --no-startup-id cmus-remote --next  # Play next track in library
bindsym XF86AudioPrev exec --no-startup-id cmus-remote --prev  # Play previous track in library

# Make screenshots
bindsym Print exec --no-startup-id scrot            # Normal
bindsym Shift+Print exec --no-startup-id scrot -d 3 # Delay

# Toggle touchpad on/off
bindsym XF86TouchpadToggle exec --no-startup-id bash /home/myc3lium/.bin/toggle_pad

exec_always --no-startup-id xmodmap -e "keysym Caps_Lock = Escape"
exec_always --no-startup-id xmodmap -e "clear lock"

# compton with shadows.
exec_always --no-startup-id "/home/myc3lium/.bin/compton-start -s"

exec_always --no-startup-id redshift -O 4450k
exec_always /home/myc3lium/.fehbg
