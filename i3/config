        status_command i3blocks -c /home/myc3lium/.config/i3/i3blocks.conf
        position top
        tray_output none
		strip_workspace_numbers yes

        # font pango:TerminessTTF Nerd Font Mono 14
		# font pango:FontAwesome 14
        # font pango:TerminessTTF Nerd Font 11
        
        font pango:Terminus Regular 9.8
        
        colors { 
                background $ur_background
                separator $ur_foreground

                                   #  border      background     text
                focused_workspace  $ur_active     $ur_active     $ur_foreground
                inactive_workspace $ur_background $ur_background $ur_foreground
                urgent_workspace   $ur_foreground $ur_background $ur_foreground

        }
}

