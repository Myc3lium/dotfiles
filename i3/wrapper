echo "\
<span fgcolor='${bgcolor}'>$char</span>\
<span bgcolor='${bgcolor}' fgcolor='${background}'>\
${lpad}${@:2}${rpad}\
<span fgcolor='${background}'>$char</span>\
</span>"
