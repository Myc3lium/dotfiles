# vim:ft=python:

import i3ipc

i3  = i3ipc.Connection()

format_str = '<span underline=\'double\' underline_color=\'#648E8C\'>%s</span>'

def main ():
    for workspace in i3.get_workspaces ():
        name = workspace ['name'] [2 ::]

        if workspace ['focused'] or workspace ['visible']:
            print(format_str % name, end = '  ')

        else:
            print(name, end = '  ')


if __name__ == '__main__':
    main ()
