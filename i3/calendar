#!/bin/bash
# vim:filetype=sh:

bash $HOME/.config/i3/wrapper 6 0 "[ $(date '+%H:%M:%S') ]"

source $HOME/.cache/wal/colors.sh
case $BLOCK_BUTTON in
	1) 
		day=$(date '+%d')
		replace="\\<span bgcolor='${color4}' fgcolor='${background}'\\>$day\\<\\/span\\>"
		notify "$(date '+%-I O`clock %p')\n\n$(uptime -p | sed 's/\<up\>/Up/g')\n\nï‘•  $(date '+%A') ${day}$(cal -h | tail -c +5 | sed "s/$day/$replace/g;"; )"
	;;

	3)
		notify "$(curl wttr.in/$LOCATION?0T)" ;;
	*) ;;
esac
