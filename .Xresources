! URxvt settings
!#define FONT Terminus
!#define FONT TerminessTTF Nerd Font Mono

!#include ".cache/wal/colors.Xresources"
#define FONT GohuFont\ Nerd\ Font\ Mono
#define FSIZE 10.5

! text formatting
URxvt.lineSpace: 0
URxvt.font: xft:FONT:size=FSIZE:Regular
URxvt.boldFont: xft: FONT : size=FSIZE:Regular
URxvt.italicFont: xft: FONT : size=FSIZE Italic
URxvt.boldItalicFont: xft: FONT : size=FSIZE:Italic : Bold
!URxvt.letterSpace: 2.5
! misc coloring
! URxvt.highlightColor: rgb:83/a5/98
! URxvt.highlightTextColor: rgb:1d/20/21
! URxvt.colorBD: rgb:8e/c0/7c
! URxvt.colorIT: rgb:b8/bb/26 
! URxvt.colorUL: rgb:d3/86/9b

URxvt.internalBorder: 16
URxvt.fading: 7
URxvt.depth: 0
! URxvt.background: rgb:00/00/00
! URxvt.shading: 0

! URxvt.blurRadius: 10
! URxvt.transparent: true

! Xterm escapes, word by word movement
URxvt.keysym.Control-Left: \033[1;5D
URxvt.keysym.Control-Right: \033[1;5C

! extensions
URxvt.perl-ext-common: default,matcher,resize-font
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg6

! Urxvt resize key escapes
URxvt.keysym.C-bracketleft:  resize-font:smaller
URxvt.keysym.C-bracketright:  resize-font:bigger
URxvt.keysym.C-equal:  		resize-font:reset

URxvt.scrollBar: false
URxvt.geometry: 81x23

! remove annoying popups
URxvt.iso14755: false
URxvt.iso14755_52: false

! Cursor settings
URxvt.cursorColor:rgb:b8/bb/26
URxvt.cursorUnderline:True


! Xft settings
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: full


! XTerm settings
XTerm.termName: xterm-256color
XTerm.vt100.locale: true
XTerm.vt100.saveLines: 4096
XTerm.vt100.faceName: FONT :size=FSIZE:antialias=false

XTerm.font: xft:FONT:size=FSIZE:Regular
XTerm.boldFont: xft: FONT : size=FSIZE:Regular
XTerm.italicFont: xft: FONT : size=FSIZE Italic
XTerm.boldItalicFont: xft: FONT : size=FSIZE:Italic : Bold

UXTerm.font: xft:FONT:size=14:Regular
UXTerm.boldFont: xft:FONT:size=14:Regular
UXTerm.italicFont: xft:FONT:size=14:Italic
UXTerm.boldItalicFont: xft:FONT:size=14:Italic:Bold
